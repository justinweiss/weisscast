<% @title = "Music Player" %>

<h1>Now Playing: <%= @now_playing %></h1>

<h2><%= link_to "Listen!", "/radio.m3u"%></h2>

<table>
  <tr>
  </tr>

<% for audio_file in @audio_files %>
  <tr>
    <td><%= audio_file.display_name %></td>
    <td><%= link_to 'Add to queue', audio_queues_path('audio_queue[audio_file_id]' => audio_file.id), :method => :post %>
    <!-- <td><%= link_to 'Show', audio_file %></td>
    <td><%= link_to 'Edit', edit_audio_file_path(audio_file) %></td>
    <td><%= link_to 'Destroy', audio_file, :confirm => 'Are you sure?', :method => :delete %></td> -->
  </tr>
<% end %>
</table>


<br />

<%= link_to 'Upload an MP3', new_audio_file_path %>

